---
const { title, image, gift, duration, link } = Astro.props;
---

<a href={link} class="relative w-full h-52 sm:h-60 md:h-64 lg:h-72 group block" target="_blank" rel="noopener noreferrer">
    <img 
      src={image}
      alt="Not Found" 
      class="block w-full h-full object-cover rounded transition-opacity duration-300 group-hover:opacity-0"
    />
    
    <!-- AÃ±adimos un segundo <img> para el GIF, que aparece en hover -->
    <img 
      src={gift}
      alt="GIF not found" 
      class="block w-full h-full object-cover rounded transition-opacity duration-300 absolute top-0 left-0 opacity-0 group-hover:opacity-100"
    />

    <!-- Nuevo div con gradiente -->
    <div class="absolute rounded-b inset-0 flex items-center justify-center bg-gradient-to-t from-black via-transparent to-transparent transition-opacity duration-300 group-hover:opacity-100">
      <div class="absolute bottom-0 left-0 w-full flex flex-row mb-2 ml-2">
        <h1 class="font-bold text-accent text-lg lg:text-xl">{title}</h1>
        <p class="text-primary text-base lg:text-lg ml-4 mt-1 sm:mt-1 lg:mt-0">{duration}</p>
      </div>
    </div>
</a>

<style>
@keyframes fade-in {
    from {
        opacity: 0;
    }
    to {
        opacity: 1;
    }
}

.animate-fade-in {
    animation: fade-in 2.5s ease-out;
}
</style>
