---
import AlarmButton from "./AlarmButton.astro";
import PlayButton from "./PlayButton.astro";

const { title, image, number, link, description, duration } = Astro.props;
---

<div class="relative w-full h-full group overflow-visible">
  <!-- Imagen -->
  <img 
    src={image}
    alt={title}
    class="block w-full h-60 sm:h-80 md:h-96 lg:h-[550px] object-cover rounded transition-transform duration-300 ease-in-out transform group-hover:scale-105"
  />

  <!-- Número en la esquina superior derecha -->
  <div class="absolute top-0 right-5 sm:right-10 md:right-15 lg:right-20 bg-blue-600 text-white text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-bold px-4 py-4">
    {number}
  </div>

  <!-- Contenedor para información y botones -->
  <div class="absolute bottom-0 left-0 right-0 p-4 flex flex-col items-start">
    <!-- Información de la serie -->
    <div class="text-white rounded-b-lg mb-1 lg:mb-4 w-full max-w-xs md:max-w-md lg:max-w-xl p-2">
      <div class="flex flex-row items-center text-left gap-2">
        <h1 class="text-base sm:text-lg md:text-xl lg:text-2xl font-bold">{title}</h1>
        <p class="text-xs sm:text-sm mt-1  md:text-base text-primary">{duration}</p>
      </div>
      <p class="text-xs sm:text-sm md:text-base mt-1 text-primary line-clamp-2 sm:lg:line-clamp-none md:lg:line-clamp-none lg:line-clamp-none">{description}</p>
    </div>

    <!-- Botones -->
    <div class="flex flex-row items-center space-x-2 p-3">
      <PlayButton />
      <AlarmButton />
    </div>
  </div>
</div>
