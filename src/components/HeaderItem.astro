---
import { formatMinutes } from '../utils/general';
const { title, image, duration, description } = Astro.props;
---

<div class="absolute inset-0 bg-cover bg-top flex items-center animate-fade-in" style={`background-image: linear-gradient(to right, rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0)), url('${image}');`}>
    <div class="flex flex-col items-center px-4 sm:px-6 xl:px-8 py-8 text-white transition-transform duration-1000 transform scale-100">
        <div class="py-10 mt-52 md:mt-10 animate-slide-in">
            <div class="flex flex-row items-baseline gap-2">
                <h1 class="text-3xl md:text-5xl font-bold leading-tight">
                    {title}
                </h1>
                <p class="text-base md:text-lg">
                    {formatMinutes(parseInt(duration))}
                </p>
            </div>
            <p class="text-base md:text-md mb-6 max-w-2xl md:max-w-4xl">
                {description}
            </p>
            <div class="flex flex-row gap-4 md:flex-row md:gap-4">
                <button class="hidden md:block bg-blue-600 text-white px-8 md:px-12 py-2 md:py-3 rounded-lg hover:bg-blue-700 transition-colors duration-300">Ver Ahora</button>
                <button class="hidden md:block text-xl md:text-2xl bg-neutral-900 text-white p-2 md:p-3 rounded-lg shadow-lg hover:bg-neutral-800 transition-colors duration-300">
                    <ion-icon name="notifications-outline"></ion-icon>
                </button>
            </div>
        </div>
    </div>
</div>

<style>
@keyframes slide-in {
    from {
        transform: translateY(-20px);
        opacity: 0;
    }
    to {
        transform: translateY(0);
        opacity: 1;
    }
}

.animate-slide-in {
    animation: slide-in 1s ease-out;
}
@keyframes fade-in {
    from {
        opacity: 0;
    }
    to {
        opacity: 1;
    }
}
.animate-fade-in {
    animation: fade-in 2.5s ease-out;
}
</style>
